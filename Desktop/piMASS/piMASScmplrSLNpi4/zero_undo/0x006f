 uniform vec2		aTX[8];
 uniform vec4 		aCNL[8];


 void main() {
      vec2	fUV = fr_uv*vec2(1.0,-1.0) + vec2(0.0,1.0),
                cUV = aCNL[0].xy/tgPX,
		crs = abs(fUV-cUV)*tgPX;

      gl_FragColor = texture2D( tex0, fUV );
 }

